<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Equipment Form View -->
    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="department"/>
                        <field name="location"/>
                    </group>

                    <group>
                        <field name="purchase_date"/>
                        <field name="warranty_end"/>
                        <field name="is_scrap"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
