<odoo>
  <record id="view_gearguard_request_kanban" model="ir.ui.view">
    <field name="model">gearguard.request</field>
    <field name="arch" type="xml">
      <kanban default_group_by="stage">
        <field name="name"/>
        <templates>
          <t t-name="kanban-box">
            <div>
              <strong><field name="name"/></strong>
              <div><field name="technician_id"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
</odoo>
